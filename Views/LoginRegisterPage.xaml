<Page x:Class="HealthyLife.Views.LoginRegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthyLife.Views"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       Background="#FFF5F5F5">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="HealthyLife" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20" />

        <!-- Вкладки (Login / Register) -->
        <TabControl Grid.Row="1" Margin="0,20,0,0"
            Background="White"
            Foreground="Black">

            <!-- Вкладка Login -->
            <TabItem Header="Login">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBox materialDesign:HintAssist.Hint="Username" Margin="0,10" />
                    <PasswordBox materialDesign:HintAssist.Hint="Password" Margin="0,10" />
                    <Button Content="Log In"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,20" Height="40"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Register -->
            <TabItem Header="Register">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBox materialDesign:HintAssist.Hint="Username" Margin="0,10" />
                    <TextBox materialDesign:HintAssist.Hint="Email" Margin="0,10" />
                    <PasswordBox materialDesign:HintAssist.Hint="Password" Margin="0,10" />
                    <PasswordBox materialDesign:HintAssist.Hint="Confirm Password" Margin="0,10" />
                    <Button Content="Register"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,20" Height="40"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
