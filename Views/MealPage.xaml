<Page x:Class="HealthyLife.Views.MealPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF9C4" Offset="0" />
            <GradientStop Color="#F8BBD0" Offset="1" />
        </LinearGradientBrush>
    </Page.Background>

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Кнопка Назад -->
            <Button Content="←" Click="BackButton_Click"
                Background="Transparent" Foreground="Black" BorderThickness="0"
                HorizontalAlignment="Left" Margin="0,0,0,0"/>

            <!-- Заголовок прийому їжі -->
            <TextBlock x:Name="MealTitle" Text="Прийом їжі" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,10,0,20">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF8A65" Offset="0" />
                        <GradientStop Color="#F06292" Offset="1" />
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <!-- Поле для додавання страв -->
            <Border Background="White" CornerRadius="20" Padding="10" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="Додати страву" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBox materialDesign:HintAssist.Hint="Назва страви" Margin="0,5"/>
                    <TextBox materialDesign:HintAssist.Hint="Калорійність (ккал)" Margin="0,5"/>
                    <TextBox materialDesign:HintAssist.Hint="Білки (г)" Margin="0,5"/>
                    <TextBox materialDesign:HintAssist.Hint="Жири (г)" Margin="0,5"/>
                    <TextBox materialDesign:HintAssist.Hint="Вуглеводи (г)" Margin="0,5"/>
                    <Button Content="Додати" Background="#FFB74D" Foreground="White" Width="150" Margin="0,10"/>
                </StackPanel>
            </Border>

            <!-- Список доданих страв (заглушка) -->
            <Border Background="White" CornerRadius="20" Padding="10" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="Додані страви" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock Text="Тут буде список страв" FontStyle="Italic" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
